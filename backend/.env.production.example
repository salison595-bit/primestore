# Production environment template for PRIME STORE
# Copy to .env and replace placeholders with real secrets. Do NOT commit .env

NODE_ENV=production
PORT=5000
LOG_LEVEL=INFO
MAINTENANCE_MODE=false

# PostgreSQL (use a managed DB connection)
DATABASE_URL=postgresql://<db_user>:<db_password>@<db_host>:5432/<db_name>?schema=public

# JWT - strong random secret (use `node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"`)
JWT_SECRET=<your_strong_jwt_secret_here>
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# Frontend / API URLs
FRONT_URL=https://your-frontend.example.com
API_URL=https://api.your-domain.com

# Mercado Pago
MP_ACCESS_TOKEN=<mercado_pago_access_token>
MERCADO_PAGO_WEBHOOK_SECRET=<mercado_pago_webhook_secret>

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=<aws_access_key>
AWS_SECRET_ACCESS_KEY=<aws_secret>
AWS_S3_BUCKET=<s3_bucket_name>
AWS_REGION=sa-east-1

# SMTP (email provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# Redis (recommended for cache/session)
REDIS_URL=redis://:<redis_password>@<redis_host>:6379/0

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring / error reporting
SENTRY_DSN=<sentry_dsn_or_empty>

# Optional: Supplier API keys (dropshipping)
# SUPPLIER_API_KEY=<supplier_api_key>
# SUPPLIER_WEBHOOK_SECRET=<supplier_webhook_secret>

# SECURITY
NODE_TLS_REJECT_UNAUTHORIZED=1

# Notes:
# - Never commit `.env` to git. Keep `.env.production.example` in the repo as a template.
# - Use a secrets manager (AWS Secrets Manager, Azure Key Vault, GitHub Actions secrets) for CI/CD.
