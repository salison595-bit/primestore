# ============================================================================
# PRIME STORE - VARIÁVEIS DE AMBIENTE
# ============================================================================
# Copie este arquivo para .env e preencha os valores reais
# Nunca commitar .env com dados sensíveis!

# ============================================================================
# APLICAÇÃO
# ============================================================================
NODE_ENV=development
PORT=5000
LOG_LEVEL=INFO
MAINTENANCE_MODE=false
DEBUG=false

# ============================================================================
# BANCO DE DADOS
# ============================================================================
# PostgreSQL (recomendado)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/prime_store?schema=public

# ============================================================================
# AUTENTICAÇÃO
# ============================================================================
# JWT - Gere uma string aleatória forte (use: crypto.randomBytes(32).toString('hex'))
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_minimo_32_caracteres
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# ============================================================================
# URLs
# ============================================================================
FRONT_URL=http://localhost:3000
API_URL=http://localhost:5000

# ============================================================================
# PAGAMENTO - MERCADO PAGO
# ============================================================================
# Obtenha em: https://www.mercadopago.com/developers/pt-BR/docs/checkout-api/start-integration
MP_ACCESS_TOKEN=seu_token_mercado_pago_aqui
MERCADO_PAGO_WEBHOOK_SECRET=seu_webhook_secret_aqui

# ============================================================================
# ARMAZENAMENTO - AWS S3 (para upload de imagens)
# ============================================================================
# Opcional - se não usar, comentar
AWS_ACCESS_KEY_ID=sua_chave_aws
AWS_SECRET_ACCESS_KEY=sua_senha_aws
AWS_S3_BUCKET=prime-store-images
AWS_REGION=sa-east-1

# ============================================================================
# EMAIL (para recuperação de senha, notificações)
# ============================================================================
# Exemplo usando Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_aplicacao_gmail
SMTP_FROM=noreply@primestore.com

# ============================================================================
# CACHE E SESSÃO - REDIS (opcional mas recomendado)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# FORNECEDORES - DROPSHIPPING API
# ============================================================================
# Configurar conforme fornecedores integrados
# SUPPLIER_API_KEY=sua_chave_fornecedor
# SUPPLIER_WEBHOOK_URL=seu_webhook_fornecedor

# ============================================================================
# RATE LIMITING
# ============================================================================
# Valores em minutos
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================
# Arquivo de logs será criado em backend/logs/
LOG_FORMAT=json

# ============================================================================
# MODO DESENVOLVIMENTO
# ============================================================================
# Em desenvolvimento, pode usar valores fictícios em campos de teste
# Em produção, TODOS os valores devem ser reais e seguros
